@model Incubadora.ViewModels.AspNetUsersVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<noscript>
    <meta http-equiv="refresh" content="0;URL=@Url.Action("NoScript", "Error")" />
</noscript>
<div class="bs-container" style="min-height:960px;">
    <section class="content-header">
        <h1>
            Seguridad
            <small>(Agregar)</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"> <i class="fa fa-dashboard"></i>Seguridad </a></li>
            <li> <a href="#">Agregar</a></li>
            <li class="active"> Perfil </li>
        </ol>
    </section>
    <br />
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h5 class="box-title">
                        <label class="text-success emailtitleletter">
                            <i class="text-success fas fa-user-check"></i>
                            @User.Identity.Name (@ViewBag.Role)
                        </label>&nbsp;
                    </h5>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body ">
                    <div class="row">
                        <div class="col-md-offset-1 col-xs-12 col-sm-12 col-md-5 col-lg-5 container-fluid">
                            <div class="form-group">
                                <div id="imgPreview">
                                    <img id="targetImg" alt="User profile picture" src="~/Img/user-anonimo.png" class="profile-user-img img-responsive">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFile">Cargar Foto:</label>
                                <input type="file" class="form-control input-sm " />
                            </div>
                            
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-5  col-lg-5 container-fluid">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label>
                                        <span class="fas fa-user-check"></span>
                                        Nombre de Usuario:&nbsp;&nbsp;
                                    </label>
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control input-sm", placeholder = "Nombre de Usuario", required = "", type = "mail" })
                                </div>
                                <div class="form-group">
                                    <label>
                                        <span class="fas fa-at"></span>
                                        Email:&nbsp;&nbsp;
                                    </label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-sm", placeholder = "Email del Usuario", required = "", type = "mail" })
                                </div>
                                <div class="form-group">
                                    <label>
                                        <span class="fas fa-mobile-alt"></span>
                                        Num. Telefónico:&nbsp;&nbsp;
                                    </label>
                                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control input-sm", placeholder = "Formato: 773-123-0988", required = "", type = "tel", pattern = "[0-9]{3}-[0-9]{3}-[0-9]{4}" })
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Guardar" class="btn btn-md btn-success pull-right" id="btnGuardar" />
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>